<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/logo"
                android:paddingLeft="10sp"
                android:text="FIRST30"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/logo" />

            <Button
                android:id="@+id/apply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:background="@color/transparent"
                android:textColor="@color/colorAccent"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_coupon"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:text="Get Free Delivery"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

        <!--<View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1sdp"
            android:layout_below="@+id/title"
            android:background="@color/finestBlack"
            android:layout_margin="5sdp"/>-->

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            android:layout_below="@+id/title"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>