<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="25dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/admin_order_date"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:gravity="center"
                android:text="2017 \n 02 \nDec"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order:"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/admin_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" #3480"
                        android:textColor="@color/blue_500"
                        android:textSize="17sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/admin_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shajed Evan"
                    android:textColor="@color/overlay_dark_90"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/admin_order_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="evanshajeed@gmail.com" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/admin_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$154.00"
                    android:textColor="@color/overlay_dark_70"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/admin_order_status"
                android:layout_width="wrap_content"
                android:lines="1"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:gravity="center"
                android:text="processing"
                android:textColor="@color/grey_700" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>